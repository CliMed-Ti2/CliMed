@model IEnumerable<CliMed.Models.Clinicas>

@{
    ViewData["Title"] = "Clínicas";
}

<h1>Clínicas</h1>

<p>
    <a asp-action="Create">Criar nova Clínica</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Morada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Morada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdClinica">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdClinica">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdClinica">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
