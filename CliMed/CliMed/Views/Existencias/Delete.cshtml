@model CliMed.Models.Existencias

@{
    ViewData["Title"] = "Apagar";
}
 
<h1>Apagar Existência</h1>

<h3>Tem a certeza que quer eliminar este registo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClinicaFK)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clinica.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoFK)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Designacao)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdExistencia" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a Listagem Inicial</a>
    </form>
</div>
