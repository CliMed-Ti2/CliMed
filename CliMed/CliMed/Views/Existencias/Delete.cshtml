@model CliMed.Models.Existencias

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Tem a certeza que quer apagar?</h3>
<div>
    <h4>Existências</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClinicaFK)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClinicaFK)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoFK)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutoFK)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdExistencia" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a Lista Principal</a>
    </form>
</div>
