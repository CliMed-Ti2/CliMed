@model CliMed.Models.Existencias

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Existências</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdExistencia" />

            <div class="form-group">
                <label asp-for="ClinicaFK" class="control-label"></label>
                <input asp-for="ClinicaFK" class="form-control" />
                <span asp-validation-for="ClinicaFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoFK" class="control-label"></label>
                <input asp-for="ProdutoFK" class="form-control" />
                <span asp-validation-for="ProdutoFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista Principal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
