@model IEnumerable<CliMed.Models.Existencias>

@{
    ViewData["Title"] = "Index";
}

<h1>Existência</h1>

<p>
    <a asp-action="Create">Adicionar uma nova Existência</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clinica.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto.Designacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Clinica.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Designacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdExistencia">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdExistencia">Detalhe</a> |
                <a asp-action="Delete" asp-route-id="@item.IdExistencia">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
