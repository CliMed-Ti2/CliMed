@page
@model CliMed.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registar Novo Utilizador";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">

            <h4>Criar uma nova conta de utilizador.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <hr />

            @* adicionar os dados referentes aos utilizadores *@

            @* perguntar o nome do Utilizador *@
            <div class="form-group">
                <label asp-for="Input.Utilizador.Nome"></label>
                <input asp-for="Input.Utilizador.Nome" class="form-control" />
                <span asp-validation-for="Input.Utilizador.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Utilizador.Localidade"></label>
                <input asp-for="Input.Utilizador.Localidade" class="form-control" />
                <span asp-validation-for="Input.Utilizador.Localidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Utilizador.CodigoPostal"></label>
                <input asp-for="Input.Utilizador.CodigoPostal" class="form-control" />
                <span asp-validation-for="Input.Utilizador.CodigoPostal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Utilizador.Contacto"></label>
                <input asp-for="Input.Utilizador.Contacto" class="form-control" />
                <span asp-validation-for="Input.Utilizador.Contacto" class="text-danger"></span>
            </div>

            @* permitir o FileUpload do ficheiro com a 'fotografia' do Utilizador *@
            <div class="form-group">
                <label class="control-label">Fotografia</label>
                @*<input asp-for="Foto" class="form-control" />*@
                <input type="file" data-val="true" name="fotoVet" style="color:blue;" accept=".jpg,.png" />
            </div>

            <button type="submit" class="btn btn-primary">Registar</button>
        </form>
    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}