@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar Novo Utilizador";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h4>Criar uma nova conta de utilizador.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <hr />

            @*Dados referentes ao Utilizador *@

            <div class="form-group">
                <label asp-for="Input.Utilizador.Nome"></label>
                <input asp-for="Input.Utilizador.Nome" class="form-control" />
                <span asp-validation-for="Input.Utilizador.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Utilizador.Localidade"></label>
                <input asp-for="Input.Utilizador.Localidade" class="form-control" />
                <span asp-validation-for="Input.Utilizador.Localidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Utilizador.CodigoPostal"></label>
                <input asp-for="Input.Utilizador.CodigoPostal" class="form-control" />
                <span asp-validation-for="Input.Utilizador.CodigoPostal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Utilizador.Contacto"></label>
                <input asp-for="Input.Utilizador.Contacto" class="form-control" />
                <span asp-validation-for="Input.Utilizador.Contacto" class="text-danger"></span>
            </div>

            @* Upload da Fotografia do Utilizador *@
        <div class="form-group">
            <label asp-for="Input.Utilizador.Fotografia" class="control-label"></label>
            <input type="file" data-val="true" name="fotoUser" style="color:blue;" accept=".jpg,.png,.jpeg" />
            <span asp-validation-for="Input.Utilizador.Fotografia" class="text-danger"></span>
        </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Utilizar outro serviço para o registo.</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            Não existem serviços externos de autenticação. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
